{
  "name": "ipatool.ts",
  "version": "0.1.0",
  "description": "A tool to download IPAs from the iOS App Store",
  "main": "lib/cli/index.js",
  "bin": {
    "ipatool": "lib/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:bundle": "wireit",
    "lint": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**",
        ".tsbuildinfo"
      ],
      "packageLocks": [
        "package-lock.json"
      ]
    },
    "build:bundle": {
      "command": "tsup",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "package.json"
      ],
      "output:": [
        "dist/**"
      ],
      "packageLocks": [
        "package-lock.json"
      ]
    },
    "lint": {
      "command": "eslint --fix src/**",
      "files": [
        "src/**/*.ts",
        ".eslintrc.yml"
      ],
      "output": []
    }
  },
  "tsup": {
    "entry": [
      "src/cli/index.ts"
    ],
    "clean": true,
    "splitting": false,
    "sourcemap": true,
    "format": [
      "esm"
    ],
    "minify": true
  },
  "files": [
    "dist/**/*"
  ],
  "author": "beerpsi",
  "license": "0BSD",
  "devDependencies": {
    "@types/cli-progress": "^3.9.2",
    "@types/plist": "^3.0.2",
    "@types/yargs": "^17.0.10",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "tsup": "^5.12.6",
    "typescript": "^4.6.4",
    "wireit": "^0.3.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-progress": "^3.11.0",
    "cli-table3": "^0.6.2",
    "fast-plist": "^0.1.2",
    "fetch-cookie": "^2.0.3",
    "filesize": "^8.0.7",
    "getmac": "^5.20.0",
    "jszip": "^3.9.1",
    "keytar": "^7.9.0",
    "node-fetch": "^3.2.4",
    "plist": "^3.0.5",
    "terminal-link": "^3.0.0",
    "yargs": "^17.4.1"
  }
}
